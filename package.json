{
  "name": "@hb42/farc-server",
  "productname": "farc-server",
  "displayname": "Datei-Archiv-Server",
  "description": "Auslagern und Zurücksichern für den FI-Filer (Server-Teil)",
  "version": "1.0.0-rc.0",
  "copyright": "Copyright (c) 2018-2019 Hartmut Bauer",
  "author": "hb",
  "license": "MIT",
  "main": "server.js",
  "scripts": {
    "build:prep": "npm --no-git-tag-version version prerelease",
    "gittag": "git log --pretty=format:\"commit %h %ci\" -n 1 > .\\dist\\resource\\git.ver",
    "gittagx": "git log --pretty=format:'commit %h %ci' -n 1 > ./dist/resource/git.ver",
    "clean:dist": "./node_modules/.bin/rimraf dist",
    "copy:resource": "./node_modules/.bin/copyfiles -u 1 src/resource/* dist",
    "copy:package": "./node_modules/.bin/copyfiles package.json dist",
    "copy:static": "./node_modules/.bin/copyfiles -u 3 \"../farc/dist/**/*\" dist/static",
    "copy": "npm run copy:resource && npm run copy:package && npm run copy:static",
    "copy:confx": "cp ./dist/resource/conf.prod.x.json ./dist/config.json",
    "copy:conf": "copy .\\dist\\resource\\conf.prod.json .\\dist\\config.json",
    "build:gen": "npm run clean:dist && tsc && npm run copy",
    "modules": "pushd dist && npm install --production && popd",
    "build:nv": "npm run build:gen && npm run copy:conf && npm run gittag",
    "buildx:nv": "npm run build:gen && npm run copy:confx && npm run gittagx",
    "build": "npm run build:nv && npm run build:prep && npm run copy",
    "buildx": "npm run buildx:nv && npm run build:prep && npm run copy",
    "make": "npm run build && npm run modules",
    "makex": "npm run buildx && npm run modules",
    "pack": "cd dist && zip -FS -r ../farcserver.zip .",
    "release": "npm --no-git-tag-version version patch && npm run build:nv && npm run modules"
  },
  "server": {},
  "repository": "hb42/farc-server",
  "publishConfig": {
    "registry": "http://e077npm"
  },
  "dependencies": {
    "@hb42/lib-common": "https://github.com/hb42/lib-common/releases/download/v1.0.1/hb42-lib-common-1.0.1.tgz",
    "@hb42/lib-farc": "https://github.com/hb42/lib-farc/releases/download/v1.0.4/hb42-lib-farc-1.0.4.tgz",
    "@hb42/lib-server": "https://github.com/hb42/lib-server/releases/download/v1.0.2/hb42-lib-server-1.0.2.tgz",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.5",
    "cron": "^1.6.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "http": "0.0.0",
    "jsonwebtoken": "^8.4.0",
    "ldapjs": "^1.0.2",
    "log4js": "^3.0.0",
    "mime": "^2.4.0",
    "mongoose": "^5.4.4",
    "nodemailer": "^5.1.1",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.0",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.4",
    "@types/cron": "^1.3.0",
    "@types/express": "^4.16.0",
    "@types/ldapjs": "^1.0.3",
    "@types/mongoose": "^5.3.7",
    "@types/node": "^10.12.18",
    "@types/nodemailer": "^4.6.5",
    "@types/nodemailer-direct-transport": "^1.0.31",
    "@types/nodemailer-smtp-transport": "^2.7.4",
    "@types/request": "^2.48.1",
    "@types/serve-favicon": "^2.2.30",
    "@types/serve-static": "^1.13.2",
    "copyfiles": "^2.1.0",
    "rimraf": "^2.6.3",
    "tsconfig-lint": "^0.12.0",
    "tslint": "^5.12.1",
    "typescript": "^3.2.2"
  }
}
