{
  "name": "@hb42/farc-server",
  "productname": "farc-server",
  "displayname": "Datei-Archiv-Server",
  "description": "Auslagern und Zurücksichern für den FI-Filer (Server-Teil)",
  "version": "1.0.0-rc.2",
  "copyright": "Copyright (c) 2018-2019 Hartmut Bauer",
  "author": "hb",
  "license": "MIT",
  "main": "server.js",
  "scripts": {
    "build:prep": "npm --no-git-tag-version version prerelease",
    "gittag": "git log -n 1 --pretty=format:\"`git describe --tags --long` %cd\" --date=format:'%d-%m-%Y %H:%M:%S' > ./dist/resource/git.ver",
    "clean:dist": "rimraf dist",
    "copy:resource": "copyfiles -u 1 src/resource/* dist",
    "copy:package": "copyfiles package.json dist",
    "copy:static": "copyfiles -u 3 \"../farc/dist/**/*\" dist/static",
    "copy": "npm run copy:resource && npm run copy:package && npm run copy:static",
    "copy:conf": "cp ./dist/resource/conf.prod.$npm_package_config_platform.json ./dist/config.json",
    "build:gen": "npm run clean:dist && tsc && npm run copy",
    "modules": "pushd dist && npm install --production && popd",
    "build:nv": "npm run build:gen && npm run copy:conf && npm run gittag",
    "build": "npm --no-git-tag-version version prerelease && npm run build:nv",
    "make": "npm run build && npm run modules",
    "release:pre": "npm version prerelease && npm run build:nv && npm run modules",
    "release:patch": "npm version patch && npm run build:nv && npm run modules",
    "release:minor": "npm version minor && npm run build:nv && npm run modules",
    "release:major": "npm version major && npm run build:nv && npm run modules",
    "release": "npm run release:patch"
  },
  "server": {},
  "repository": "hb42/farc-server",
  "config": {
    "platform": "win"
  },
  "dependencies": {
    "@hb42/lib-common": "git+https://github.com/hb42/lib-common.git#semver:^1.0.0",
    "@hb42/lib-farc": "git+https://github.com/hb42/lib-farc.git#semver:^1.0.0",
    "@hb42/lib-server": "git+https://github.com/hb42/lib-server.git#semver:^1.0.0",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.5",
    "cron": "^1.6.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "http": "0.0.0",
    "jsonwebtoken": "^8.4.0",
    "ldapjs": "^1.0.2",
    "log4js": "^4.0.0",
    "mime": "^2.4.0",
    "mongoose": "^5.4.9",
    "nodemailer": "^5.1.1",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.0",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.4",
    "@types/cron": "^1.6.0",
    "@types/express": "^4.16.1",
    "@types/ldapjs": "^1.0.3",
    "@types/mongoose": "^5.3.12",
    "@types/node": "^10.12.21",
    "@types/nodemailer": "^4.6.5",
    "@types/nodemailer-direct-transport": "^1.0.31",
    "@types/nodemailer-smtp-transport": "^2.7.4",
    "@types/request": "^2.48.1",
    "@types/serve-favicon": "^2.2.30",
    "@types/serve-static": "^1.13.2",
    "copyfiles": "^2.1.0",
    "rimraf": "^2.6.3",
    "tsconfig-lint": "^0.12.0",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1"
  }
}
