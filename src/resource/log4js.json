{
  "appenders": [
    {
      "category": "server",
      "type": "file",
      "filename": "../div/server.log",
      "maxLogSize": 2048000,
      "backups": 5,
      "compress": true,
      "layout": {
        "type": "pattern",
        "pattern": "[%d{ISO8601} %5.5p] - %m"
      }
    },
    {
      "category": "read",
      "type": "file",
      "filename": "../div/read.log",
      "maxLogSize": 2048000,
      "backups": 5,
      "compress": true,
      "layout": {
        "type": "pattern",
        "pattern": "[%d{ISO8601} %5.5p] - %m"
      }
    },
    {
      "category": "web",
      "type": "file",
      "filename": "../div/web.log",
      "maxLogSize": 2048000,
      "backups": 5,
      "compress": true,
      "layout": {
        "type": "pattern",
        "pattern": "[%d{ISO8601} %5.5p] - %m"
      }
    },
    {
      "category": "ep",
      "type": "file",
      "filename": "../div/endpunkt.log",
      "maxLogSize": 20480,
      "backups": 10,
      "layout": {
        "type": "pattern",
        "pattern": "[%d{ISO8601} %5.5p] - %m"
      }
    }

  ],
  "levels": {
    "[all]": "INFO",
    "server": "TRACE",
    "read": "TRACE",
    "web": "TRACE",
    "ep": "INFO"
  }
}
